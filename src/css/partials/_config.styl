///// Variables //////

// main
$nav-h = 50px
$sub-h = 26px
$link-m = 35px

// colors
$olive = #93966b
$navy = #3e5164
$steel = #ebebeb
$rain = #78777a
$cloud = #f8f6f5
$filtergray = #f3f0ef

// media queries

$s = 'screen and (min-width: 768px)'
$m = 'screen and (min-width: 992px)'
$l = 'screen and (min-width: 1200px)'


///// Mixins /////

// edit mode background
e(x)
    background: rgba(x,.1)

// clearfix
cf()
    zoom: 1
    &:after, &:before
        content: ""
        display: table
    &:after
        clear: both
fr()
	float: right
fl()
	float: left

// icon fonts
iconfont()
	font-family: 'wv-icons'
	speak: none
	font-style: normal
	font-weight: normal
	font-variant: normal
	text-transform: none
	line-height: 1
	-webkit-font-smoothing: antialiased
	-moz-osx-font-smoothing: grayscale

trans(x,y)
    transition all x y