.rollover ul
    text-align center
    letter-spacing .1em
    li
        fl()
        width 50%
        // height 300px
        overflow hidden
    a
        position relative
        display block
        height 100%
        width 100%
        color #fff
        background-repeat no-repeat
        background-position center center
        background-size 100% auto
        trans(.5s, ease)
        &:hover
            letter-spacing .2em
            text-shadow 0 0 8px rgba(#000, .5)
            background-size 110% auto
            z-index 999
        span
            text-transform uppercase
            position absolute
            text-align center
            top 50%
            left 50%
            transform translate(-50%, -50%)
            z-index 10
            h1
                color #fff
                font-size 2em
                font-weight 400
            p
                font-weight 300
        .tint
            position absolute
            width 100%
            height 100%
            z-index 0
            background: rgba(150, 150, 0, .5)
            trans(.5s, ease)
            &:hover
                background: rgba(100, 200, 255, .5)
